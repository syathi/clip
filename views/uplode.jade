extends layout

block content
  h1 課題投稿
  p 課題を共有しよう！
  form(
    method="post"
    action="/create"
    enctype="multipart/form-data"
  )
    p 作者
    input(
  	  type="text"
  	  name="user"
    )
    p ジム名
    input(
      type="text"
      name="gim"
    )
    p 課題名
    input(
  	  type="text"
  	  name="name"
    )
    p 課題の写真
    input(
      type="file"
      name="problem"
    )
    p グレード
    input(
      type="text"
      name="grade"
    )
    p コメント
    input(
      type="text"
      name="comment"
    )
    br
    button(
      type="submit"
      name="action"
      value="submit"
    ) 投稿する